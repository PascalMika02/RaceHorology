<Window x:Class="RaceHorology.RaceConfigurationSaveDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceHorology"
        mc:Ignorable="d"
        Background="#e6eee5"
        Title="Konfiguration als Template speichern" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Label Content="Geben Sie den Namen des neu zu erstellenden Templates ein:" />
    <TextBox x:Name="tbName" Text="Neues Template" Grid.Row="0" Grid.Column="1" Width="200" Padding="3"/>

    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button x:Name="btnCancel" Content="Abbrechen" Margin="10,0,0,0" Click="btnCancel_Click"/>
      <Button x:Name="btnSave" Content="Speichern" Margin="10,0,0,0" Click="btnSave_Click"/>
    </StackPanel>
      
  </Grid>
</Window>
