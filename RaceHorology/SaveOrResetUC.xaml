<UserControl x:Class="RaceHorology.SaveOrResetUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RaceHorology"
             mc:Ignorable="d" 
             >
  <StackPanel Orientation="Horizontal" Grid.Row="29" Grid.Column="2" HorizontalAlignment="Left" Margin="0,0,0,0">
    <Button x:Name="btnReset" Content="Zurücksetzen" Margin="5" Padding="5" MinWidth="100" Click="btnReset_Click"/>
    <Button x:Name="btnApply" Content="Speichern" ToolTip="STRG + S" Margin="5" Padding="5" MinWidth="100" Click="btnApply_Click"/>
    <Label x:Name="lbSaved" Content="Gespeichert ..." Margin="5" Padding="5" VerticalAlignment="Center"/>
  </StackPanel>
</UserControl>
