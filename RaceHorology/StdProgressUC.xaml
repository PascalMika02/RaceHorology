<UserControl x:Class="RaceHorology.StdProgressUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RaceHorology"
             mc:Ignorable="d" 
             d:DesignWidth="600">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <ProgressBar x:Name="progressBar" Grid.Column="0" Grid.Row="0" MinHeight="16"/>
    <Label x:Name="lblStatus" Content="Status" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Center"/>
  </Grid>
</UserControl>
