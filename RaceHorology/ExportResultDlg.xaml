<Window x:Class="RaceHorology.ExportResultDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceHorology"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="ExportResultDlg" Height="150" Width="400">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Label x:Name="lblStatus" Content="Statustext" Grid.Column="0" Grid.Row="0" Margin="10,10,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

    <Grid Grid.Column="1" Grid.Row="1" Background="#e6eee5">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10" >
        <Button x:Name="btnOpen" Content="Öffne Explorer" Margin="5,0,15,0" Padding="5" MinWidth="100" Click="btnOpen_Click"/>
        <Button x:Name="btnOk" Content="Schließen" Margin="15,0,5,0" Padding="5" MinWidth="100" Click="btnOk_Click"/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>
